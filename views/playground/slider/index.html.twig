                {{
                    form.fieldset_start({
                        'legend': 'Forgotten Password'
                    })
                }}

                <p class="small-type muted">Enter your email address and we’ll send you a link to reset your password.</p>

                {{
                    form.text({
                        'label': 'Your email address',
                        'class': 'form__group--top form__group--flush',
                        'error': 'We could not find an account with that email address'
                    })
