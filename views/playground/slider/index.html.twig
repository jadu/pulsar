                            })
                        ]
                    })
                }}

            </div>
        </div>
    </div>


    <div class="slider">
        <div class="slider__back">
            <div class="slider__inner">
                <img src="../../../images/branding/logo-cxm-white.png" class="slider-logo" />
                <h1 class="slider-title">What goes here?</h1>
                <p>Some really interesting and valid instructions, possibly configurable.</p>
                {{
                    html.button({
                        'label': 'Call to Action',
                        'class': 'btn--outline btn--white'
                    })
                }}
            </div>
        </div>

        <div class="slider__front">
            <div class="slider__inner">

                {{ form.create() }}

                {{
                    form.fieldset_start({
                        'legend': html.icon('check') ~ ' Check your email'
                    })
                }}

                <p>We’ve sent you an email containing instructions for resetting your password.</p>

                {{
                    html.button({
                        'label': 'Sign In',
                        'class': 'btn--primary btn--outline',
                        'type': 'link',
                        'href': '#'
                    })
                }}

                {{ form.fieldset_end() }}
                {{ form.end() }}

            </div>
        </div>
    </div>

</div>

