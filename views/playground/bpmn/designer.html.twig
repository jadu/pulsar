{% extends "@pulsar/pulsar/components/tab.html.twig" %}

{%- block actions_left -%}
    {{
        html.actions_menu({
            'items': [
                [
                    {
                        'label': 'Create site',
                        'href': '/create',
                        'icon': 'plus'
                    }
                ],
                [
                    {
                        'label': 'Archive site',
                        'href': '/archive',
                        'icon': 'archive'
                    },
                    {
                        'label': 'Delete site',
                        'href': '/delete',
                        'icon': 'times'
                    }
                ]
            ]
        })
    }}
{%- endblock -%}

{%- block actions_right -%}
    {{
        html.button({
            'label': 'Save',
            'class': 'btn--primary'
        })
    }}
    {{
        html.button({
            'label': 'Publish',
            'class': 'btn--success'
        })
    }}
{%- endblock -%}


{% block tab_content %}
<div class="bpmn"></div>
<button id="save-button">print to console</button>
<link rel="stylesheet" type="text/css" href="https://unpkg.com/bpmn-js@10.2.1/dist/assets/diagram-js.css" />
<link rel="stylesheet" type="text/css" href="https://unpkg.com/bpmn-js@10.2.1/dist/assets/bpmn-js.css" />
<link rel="stylesheet" type="text/css" href="https://unpkg.com/bpmn-js@10.2.1/dist/assets/bpmn-font/css/bpmn.css" />
<link rel="stylesheet" type="text/css" href="https://unpkg.com/bpmn-js-color-picker/colors/color-picker.css" />

{% endblock tab_content %}
