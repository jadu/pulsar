{% extends 'pulsar/layouts/base.html.twig' %}

{% block body %}
<main style="height: 100%">
	<style>
		body { background-color: #000; }
	</style>
	<a class="hide" href="#signin">Skip to Content</a>
<div class="flash-container js-flash-container"></div>

	<div class="signin-container">

		<div class="signin signin--recapt t-signin-bg">
			<img src="../../../images/branding/jadu-connect-logomark.svg?v=1" class="signin__brand" alt="Jadu Support logo">
			<h1 class="signin__heading" role="alert" aria-atomic="true">Pulsar City Council</h1>
			<div class="signin__inner">
				
				<form id="signin" class="signin__panel signin-form" aria-hidden="false">
					<div class="signin__icon t-signin-icon"></div>


					<div class="signin__group">
						<label for="username">Username <span class="hide">required</span></label>
						<input
							autofocus
							autocapitalize="off"
							autocomplete="off"
							autocorrect="off"
							class="signin__input"
							id="username"
							name="username"
							type="text"
							autocomplete="off"
							tabindex="0"
						/>
					</div>

					<div class="signin__group">
						<label for="password">Password <span class="hide">required</span></label>
						<input
							autocapitalize="off"
							autocomplete="off"
							autocorrect="off"
							class="signin__input"
							id="password"
							name="password"
							tabindex="0"
							type="password"
						/>
						<a class="signin__action" href="#forgot-password" tabindex="0">Forgotten password?</a>
					</div>

					<div class="form__group form-checkbox-inline" data-widget-id="complete_registration_page-widget-30-11"><div class="controls" data-widget-id="complete_registration_page-widget-29-11"><label class="control__label" for="privacy_policy_input" data-widget-id="complete_registration_page-widget-1076-0"><input type="checkbox" class="form__control checkbox" id="privacy_policy_input" data-widget-id="complete_registration_page-widget-1071-0"><span data-widget-id="complete_registration_page-widget-1075-0">I agree to the <a href="https://site.com" target="_blank" data-widget-id="complete_registration_page-widget-1074-0">Privacy Policy</a></span></label></div></div>

					<!-- recaptcha goes here -->

					<div class="signin__actions">
						<button class="btn btn--primary signin__submit" name="signin-submit" type="submit" tabindex="0">Sign In</button>
					</div>

					<div class="signin__actions">
						<span>Alternative sign-in methods</span>
						<button class="btn btn--outline signin__alt"><span class="connect-logo"></span> Sign in with Jadu Connect</button>
						<button class="btn btn--outline signin__alt"><i class="fas fa-lock"></i> Sign in with SAML SSO</button>
					</div>

				</form>

				<form class="signin__panel signin-reset" aria-hidden="true">
					<div class="signin__icon t-signin-icon"></div>

					<span class="signin__info" role="alert" aria-atomic="true">Enter your Jadu username and we’ll email you a link to reset your password</span>

					<div class="signin__group">
						<label for="forgot-password">Username (required)</label>
						<input
							autocapitalize="off"
							autocomplete="off"
							autocorrect="off"
							class="signin__input"
							id="forgot-password"
							name="reset-email"
							tabindex="-1"
							type="text"
							disabled="disabled"
						/>
					</div>

					<div class="signin__actions">
						<button class="btn btn--primary signin__submit" name="reset-submit" type="submit" tabindex="-1" disabled="disabled">Email Me</button>
					</div>

					<a class="signin__link" href="#forgot-username" tabindex="-1" disabled="disabled">Don’t know your username?</a>
					<br />
					<a class="signin__link" href="#signin" tabindex="-1" disabled="disabled">Cancel</a>
				</form>

				<form id="forgot-username" class="signin__panel signin-forgot" aria-hidden="true">
					<div class="signin__icon t-signin-icon"></div>

					<span class="signin__info" role="alert" aria-atomic="true">If you’ve forgotten your username you will need to contact your webmaster, or your organisation’s&nbsp;IT&nbsp;support.</span>

					<div class="signin__actions">
						<a href="#signin" class="btn btn--primary" tabindex="-1" disabled="disabled">Go Back</a>
					</div>
				</form>

				<form class="signin__panel signin-twostep" aria-hidden="true" name="twostep">
					<div class="signin__icon t-signin-icon"></div>

						<span class="signin__info" role="alert" aria-atomic="true">Two-step verification is enabled for your account.<br />Enter the code generated by your <a href="#">authenticator&nbsp;app</a></span>

						<div class="signin__group">
							<label for="twoStepOne">First three digits of two-step verification code (required)</label>
							<input
								autofocus
								autocapitalize="off"
								autocomplete="off"
								autocorrect="off"
								class="signin__code1"
								id="twoStepOne"
								maxlength="3"
								name="twoStepOne"
								placeholder="123"
								tabindex="-1"
								type="text"
								disabled="disabled"
							/>
							<label for="twoStepTwo">second three digits of two-step verification code (required)</label>
							<input
								autocapitalize="off"
								autocomplete="off"
								autocorrect="off"
								class="signin__code2"
								autocomplete="off"
								id="twoStepTwo"
								maxlength="3"
								name="twoStepTwo"
								placeholder="456"
								type="text"
								tabindex="-1"
								disabled="disabled"
							/>
						</div>
					</fieldset>

					<div class="signin__actions">
						<button class="btn btn--primary signin__submit" name="signin-twostep" type="submit" tabindex="-1" disabled="disabled">Verify Me</button>
					</div>
				</form>

				<div class="signin__panel signin-success">
					<div class="signin__icon t-signin-icon"></div>
				</div>
			
			</div>
		</div>
	<div class="signin-backdrop"></div>
	<h1 class="signin-brand"><img src="../../../../images/branding/jadu-central-wordmark-oneline.svg" alt="Jadu Central" /></h1>
	<span class="signin-credits">Photo by <a href="https://unsplash.com/@garybpt?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Gary Butterfield</a> on <a href="https://unsplash.com/s/photos/leeds-university?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Unsplash</a></span>
</div>
</main>
{% endblock %}
