{% set cssPath  = base_path ~ 'css/' %}
{% set imgPath  = base_path ~ 'images/' %}
{% set jsPath   = base_path ~ 'js/' %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Alerts - Jadu Deployer</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="TODO">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- TODO: favicons here -->

        <link rel="stylesheet" type="text/css" href="{{ cssPath ~ 'pulsar.css' }}" />

        <script src="{{ base_path ~ 'dist/js/bundle.js' }}" id="main-js"></script>
        <script src="{{ base_path ~ 'js/main.js' }}" ></script>
        <script src="{{ base_path ~ 'dist/js/lexicon-bundle.js' }}" ></script>


        {# demo styles, will need putting in project specific sass file #}
        {% include '@pulsar/playground/deployer/partials/style.html.twig' %}

    </head>
    <body>
        <a class="skip-link" href="#skip-target" tabindex="1">Skip to main content</a>

        <div class="container" id="top">
            <div class="inner-wrapper">

                {% include '@pulsar/playground/deployer/partials/nav.html.twig' %}

                <header class="toolbar">
                    {% include '@pulsar/playground/deployer/partials/toolbar-controls.html.twig' %}

                    {#
                        flash-container needs to be in the DOM before the flash message is added, ideally on page load
                        When empty, needs to be completely empty no white space
                    #}
                    {% spaceless %}
                    <div class="flash-container js-flash-container" role="status">

                        {# This should be added to the DOM after the flash-container parent in order for it to be annouced to SRs -->
                        {# example flash markup
                        <section class="flash flash--success" aria-labelledby="guid-1921523354">
                            <h2 id="guid-1921523354">Alert saved successfully</h2>
                            <button class="close" data-dismiss="flash">
                                <i class="icon-remove"><span class="hide">Close</span></i>
                            </button>
                        </section>

                        <section class="flash flash--success" aria-labelledby="guid-1921523354">
                            <h2 id="guid-1921523354">Alert deleted successfully</h2>
                            <button class="close" data-dismiss="flash">
                                <i class="icon-remove"><span class="hide">Close</span></i>
                            </button>
                        </section>
                        #}
                    </div>
                    {% endspaceless %}

                    <h1 class="main-title main-title--standalone" tabindex="-1">Alerts</h1>
                </header>

                <div class="content-main">
                    <div class="tabs__content">
                        <div class="tab__pane is-active">
                            <div class="tab__container">
                                <section class="actionsbar" aria-label="page actions">
                                    <div class="float--right">
                                        <button class="btn btn--primary" data-toggle="modal" data-target="#newAlertModal">New Alert</button>
                                    </div>
                                </section>
                                <div class="tab__inner">
                                    <main class="tab__content" id="skip-target">

                                        <p>Send email alerts when different system events occur.</p>

                                        <table class="table table--full table--horizontal u-margin-bottom-none" data-table-detail-table>
                                            <caption class="hide">Alerts</caption>
                                            <thead>
                                                <tr>
                                                    <th class="shrink-to-fit">Email</th>
                                                    <th class="shrink-to-fit">Package<br>Start</th>
                                                    <th class="shrink-to-fit">Package<br>Finish</th>
                                                    <th class="shrink-to-fit">Package<br>Error</th>
                                                    <th class="shrink-to-fit">Deployment<br>Start</th>
                                                    <th class="shrink-to-fit">Deployment<br>Finished</th>
                                                    <th class="shrink-to-fit">Deployment<br>Error</th>
                                                    <th class="shrink-to-fit">Environment<br>Added</th>
                                                    <th class="shrink-to-fit">Environment<br>Deleted</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td><a href="#editAlertModal" data-toggle="modal">james.jacobs@jadu.net</a></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-times-rectangle status--icon is-offline"><span class="hide">No</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-times-rectangle status--icon is-offline"><span class="hide">No</span></i></td>
                                                </tr>
                                                <tr>
                                                    <td><a href="#editAlertModal" data-toggle="modal">paul.bele@jadu.net</a></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-times-rectangle status--icon is-offline"><span class="hide">No</span></i></td>
                                                    <td><i class="icon-times-rectangle status--icon is-offline"><span class="hide">No</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-times-rectangle status--icon is-offline"><span class="hide">No</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-check-circle status--icon is-online"><span class="hide">Yes</span></i></td>
                                                    <td><i class="icon-times-rectangle status--icon is-offline"><span class="hide">No</span></i></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </main>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {#
        Behaviour on show:
            1. change aria-hidden="false" to aria-hidden="true"
            2. add style="display: block"
            3. focus should be managed, shift focus to the first focusable element in the modal form

        Behaviour on hide:
            1. change aria-hidden="true" to aria-hidden="false"
            2. add style="display: none" or remove style attribute
            3. focus should be returned to triggering button
        #}
        <div class="modal modal--large" id="newAlertModal" tabindex="-1" role="dialog" aria-modal="true" aria-labelledby="newAlertModal-title" aria-describedby="newAlertModal-description" aria-hidden="false">
            <div class="modal__dialog">
                <div class="modal__content">
                    <form>
                        <div class="modal__header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close dialog">×</button>
                            <h1 class="modal__title" id="newAlertModal-title">New Alert</h1>
                        </div>
                        <div class="modal__body">

                            <p id="newAlertModal-description">Send email alerts for selected events.</p>

                            <div class="form__group form__group--full">
                                <label for="guid-12536788" class="control__label">Email&nbsp;<span aria-hidden="true" class="required-indicator">*</span></label>

                                <div class="controls">
                                    <input id="guid-12536788" type="text" aria-describedby="guid-456778624" class="form__control" required>
                                    <span class="help-block" id="guid-456778624">The email address you want to send alerts to</span>
                                </div>
                            </div>

                            <fieldset class="form__group form-choice choice--block form__control-col--7">
                                <legend class="control__label">Select event triggers</legend>
                                <div class="controls">
                                    <label class="control__label" for="guid-11111111">
                                        <input type="checkbox" class="form__control checkbox" id="guid-11111111">
                                        <span class="form-choice__label">Package build started</span>
                                    </label>

                                    <label class="control__label" for="guid-22222222">
                                        <input type="checkbox" class="form__control checkbox" id="guid-22222222">
                                        <span class="form-choice__label">Package build finished</span>
                                    </label>

                                    <label class="control__label" for="guid-333333333">
                                        <input type="checkbox" class="form__control checkbox" id="guid-333333333">
                                        <span class="form-choice__label">Package build error</span>
                                    </label>

                                    <label class="control__label" for="guid-444444444">
                                        <input type="checkbox" class="form__control checkbox" id="guid-444444444">
                                        <span class="form-choice__label">Deployment started</span>
                                    </label>

                                    <label class="control__label" for="guid-555555555">
                                        <input type="checkbox" class="form__control checkbox" id="guid-555555555">
                                        <span class="form-choice__label">Deployment finished</span>
                                    </label>

                                    <label class="control__label" for="guid-666666666">
                                        <input type="checkbox" class="form__control checkbox" id="guid-666666666">
                                        <span class="form-choice__label">Deployment error</span>
                                    </label>

                                    <label class="control__label" for="guid-77777777">
                                        <input type="checkbox" class="form__control checkbox" id="guid-77777777">
                                        <span class="form-choice__label">Environment added</span>
                                    </label>

                                    <label class="control__label" for="guid-88888888">
                                        <input type="checkbox" class="form__control checkbox" id="guid-88888888">
                                        <span class="form-choice__label">Environment deleted</span>
                                    </label>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal__footer">
                            <button type="submit" class="btn btn--primary">Save</button>
                            <button type="button" class="btn btn--naked" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal modal--large" id="editAlertModal" tabindex="-1" role="dialog" aria-modal="true" aria-labelledby="editAlertModal-title" aria-describedby="editAlertModal-description" aria-hidden="false">
            <div class="modal__dialog">
                <div class="modal__content">
                    <form>
                        <div class="modal__header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close dialog">×</button>
                            <h1 class="modal__title" id="editAlertModal-title">Edit Alert</h1>
                        </div>
                        <div class="modal__body">

                            <p id="editAlertModal-description">Send email alerts for selected events.</p>

                            <div class="form__group form__group--full">
                                <label for="guid-1754188012" class="control__label">Email&nbsp;<span aria-hidden="true" class="required-indicator">*</span></label>

                                <div class="controls">
                                    <input id="guid-1754188012" type="text" aria-describedby="guid-984149025" class="form__control" required value="James Jacobs">
                                    <span class="help-block" id="guid-984149025">The email address you want to send alerts to</span>
                                </div>
                            </div>

                            <fieldset class="form__group form-choice choice--block form__control-col--7">
                                <legend class="control__label">Select event triggers</legend>
                                <div class="controls">
                                    <label class="control__label is-selected" for="guid-123123123123">
                                        <input type="checkbox" class="form__control checkbox" id="guid-123123123123" checked="checked">
                                        <span class="form-choice__label">Package build started</span>
                                    </label>

                                    <label class="control__label" for="guid-234234234">
                                        <input type="checkbox" class="form__control checkbox" id="guid-234234234">
                                        <span class="form-choice__label">Package build finished</span>
                                    </label>

                                    <label class="control__label" for="guid-345345345">
                                        <input type="checkbox" class="form__control checkbox" id="guid-345345345">
                                        <span class="form-choice__label">Package build error</span>
                                    </label>

                                    <label class="control__label" for="guid-456456456">
                                        <input type="checkbox" class="form__control checkbox" id="guid-456456456">
                                        <span class="form-choice__label">Deployment started</span>
                                    </label>

                                    <label class="control__label is-selected" for="guid-567567567">
                                        <input type="checkbox" class="form__control checkbox" id="guid-567567567" checked="checked">
                                        <span class="form-choice__label">Deployment finished</span>
                                    </label>

                                    <label class="control__label" for="guid-678678678">
                                        <input type="checkbox" class="form__control checkbox" id="guid-678678678">
                                        <span class="form-choice__label">Deployment error</span>
                                    </label>

                                    <label class="control__label" for="guid-789789789">
                                        <input type="checkbox" class="form__control checkbox" id="guid-789789789">
                                        <span class="form-choice__label">Environment added</span>
                                    </label>

                                    <label class="control__label" for="guid-890890890">
                                        <input type="checkbox" class="form__control checkbox" id="guid-890890890">
                                        <span class="form-choice__label">Environment deleted</span>
                                    </label>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal__footer">
                            <button type="submit" class="btn btn--primary">Save</button>
                            <button type="button" class="btn btn--naked" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn--danger float--right" data-dismiss="modal">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
