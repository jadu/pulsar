{% extends '@pulsar/lexicon/base.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Piano' %}

{% set tab_one %}
    {% include '/lexicon/patterns/piano/tab_singlepoint.html.twig' %}
{% endset %}

{% set tab_two %}
    {% include '/lexicon/patterns/piano/tab_messages.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "class" : "ui-report",
          "id"    : "integrations",
          "label" : "Integrations",
          "src"   : tab_one,
          "active": true
        },
        {
          "class" : "ui-report",
          "id"    : "messages",
          "label" : "Messages",
          "src"   : tab_two
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}
