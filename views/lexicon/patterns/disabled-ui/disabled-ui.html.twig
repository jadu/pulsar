{% extends "@pulsar/pulsar/components/tab.html.twig" %}
{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}

{% block tab_content %}
{{
    flash.message({
        'dismissable': false,
        'message': 'Something is preventing this UI from being enabled',
        'type': 'warning'
    })
}}

{{
    form.create({
        'data-disable-ui': "true"
    })
}}

    {{ form.fieldset_start({ 'legend': 'Example disabled UI' }) }}

    <p>Example text</p>

    {{
        form.text({
            'label': 'Text input',
            'id': 'inputText-tab-disabled',
            'name': 'inputText',
            'placeholder': 'Placeholder'
        })
    }}

    {{
        html.link({
            'label': 'External link',
            'href': 'http://google.com',
            'disabled': true
        })
    }}

    {{
        form.checkbox({
            'id': 'checkbox-' ~ random(),
            'label': 'Normal checkbox'
        })
    }}

    {{
        form.checkbox({
            'id': 'checkbox-' ~ random(),
            'label': 'Disabled checkbox',
            'disabled': true
        })
    }}

    {{ form.fieldset_end() }}

{{
    form.end({
        'actions': [
            html.button({
                'label': 'Save Changes',
                'class': 'btn--primary',
                'type': 'submit'
            }),
            html.button({
                'label': 'Cancel',
                'class': 'btn--naked'
            })
        ]
    })
}}

{% endblock tab_content %}

{% block tab_sidebar %}
    <h2 class="heading margin-bottom">{{ html.icon('info-sign', { 'class': 'sidebar-icon'}) }} Disabling a UI</h2>

    <p>You can disable parts of or a whole UI by adding data-disable-u="true" to an element. You should inform the user why the UI has been disabled and what actions need to be taken to enable it</p>
{% endblock tab_sidebar %}
