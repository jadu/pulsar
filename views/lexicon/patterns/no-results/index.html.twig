{% extends '@pulsar/lexicon/base.html.twig' %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}

{% set heading = 'No Results' %}

{% set tab_table %}
    {% include '/lexicon/patterns/no-results/table.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
            "id"    : "table",
            "label" : "Table",
            "src"   : tab_table,
            "active": true
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}

