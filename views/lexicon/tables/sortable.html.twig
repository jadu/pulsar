{% extends '@pulsar/pulsar/components/tab.html.twig' %}
{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}

{% block tab_content %}
    <table class="table is-sortable table--full">
        <thead>
            <tr>
                <th>File title</th>
                <th>Type</th>
                <th>Size</th>
                <th>Filename / URL</th>
                <th class="shrink-to-fit"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    My awesome document
                </td>
                <td>
                    {{ html.icon('file-word-o') }} .docx
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    document.docx
                </td>
                <td class="u-text-align-right ">
                    {{
                        html.link({
                            'label': html.icon('arrow-up'),
                            'class': 'hide',
                            'title': 'Move up',
                            'data-move': 'up',
                            'tabindex': '0'
                        })
                    }}
                    {{
                        html.link({
                            'label': html.icon('arrow-down'),
                            'class': 'hide',
                            'title': 'Move down',
                            'data-move': 'down',
                            'tabindex': '0'
                        })
                    }}
                    {{
                        html.link({
                            'label': html.icon('times-circle'),
                            'tabindex': '0'
                        })
                    }}
                </td>
            </tr>

            <tr>
                <td>
                    Innocent screensaver
                </td>
                <td>
                    {{ html.icon('file-code-o') }} .exe
                </td>
                <td>
                    3.5 MB
                </td>
                <td>
                    anna_kournikova.exe
                </td>
                <td class="u-text-align-right">
                    {{
                        html.link({
                            'label': html.icon('arrow-up'),
                            'class': 'hide',
                            'title': 'Move up',
                            'data-move': 'up',
                            'tabindex': '0'
                        })
                    }}
                    {{
                        html.link({
                            'label': html.icon('arrow-down'),
                            'class': 'hide',
                            'title': 'Move down',
                            'data-move': 'down',
                            'tabindex': '0'
                        })
                    }}
                    {{
                        html.link({
                            'label': html.icon('times-circle'),
                            'tabindex': '0'
                        })
                    }}
                </td>
            </tr>

            <tr>
                <td>
                    My awesome PDF
                </td>
                <td>
                    {{ html.icon('file-pdf-o') }} .pdf
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    sdfghjkhjifldshjkfdshajkl.pdf
                </td>
                <td class="u-text-align-right">
                    {{
                        html.link({
                            'label': html.icon('arrow-up'),
                            'class': 'hide',
                            'title': 'Move up',
                            'data-move': 'up',
                            'tabindex': '0'
                        })
                    }}
                    {{
                        html.link({
                            'label': html.icon('arrow-down'),
                            'class': 'hide',
                            'title': 'Move down',
                            'data-move': 'down',
                            'tabindex': '0'
                        })
                    }}
                    {{
                        html.link({
                            'label': html.icon('times-circle'),
                            'tabindex': '0'
                        })
                    }}
                </td>
            </tr>
        </tbody>
    </table><br/>
    <div class="has-badges">

        {{
            html.actions_menu({
                'items': [
                    [
                        {
                            'label': 'New Filter',
                            'href': '#',
                            'icon': 'filter',
                            'data-ui': 'show-filter-bar'
                        },
                        {
                            'label': 'Random Option',
                            'href': '#',
                            'icon': 'envelope'
                        },
                    ],
                    [
                        {
                            'label': 'Delete',
                            'href': '#',
                            'icon': 'remove',
                            'class': 'delete'
                        }
                    ]

                ]
            })
        }}
        <br />
        <div class="filter-bar display--none">
            {{ form.create() }}
                {{ form.fieldset_start({'legend': 'Filter by'}) }}

                    {{
                        form.select2({
                            'label': 'Colour',
                            'id': 'colour',
                            'multiple': true,
                            'options': {
                                'colour_red': 'Red',
                                'colour_blue': 'Blue'
                            }
                        })
                    }}

                    {{
                        form.select2({
                            'label': 'Size',
                            'id': 'size',
                            'options': {
                                '': '',
                                'small': 'Small',
                                'medium': 'Medium',
                                'large': 'Large'
                            }
                        })
                    }}

                    {{
                        form.text({
                            'label': 'Text field example',
                            'id': 'foo2'
                        })
                    }}

                    {{
                        form.date({
                            'label': 'Added from',
                            'id': 'addedFrom2',
                        })
                    }}

                    {{
                        form.date({
                            'label': 'Added to',
                            'id': 'addedTo2'
                        })
                    }}

                    {{
                        form.checkbox({
                            'label': 'In stock',
                            'id': 'inStock2'
                        })
                    }}

                {{ form.fieldset_end() }}
            {{
                form.end({
                    'actions': [
                        form.submit({
                            'label': 'Save',
                            'class': 'btn--primary'
                        }),
                        html.link({
                            'label': 'Clear',
                            'class': 'btn btn--naked',
                            'href': '#',
                            'data-ui': 'clear-all-filters'
                        })
                    ]
                })
            }}
        </div>

    <br/>
    <table class="table is-sortable table--full">
        <thead>
            <tr>
                <th>File title</th>
                <th>Type</th>
                <th>Size</th>
                <th>Filename / URL</th>
                <th class="centered">Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    My awesome document
                </td>
                <td>
                    {{ html.icon('file-word-o') }} .docx
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    document.docx
                </td>
                <td class="centered">
                    {{ form.checkbox({'bare': 'true'}) }}
                </td>
            </tr>

            <tr>
                <td>
                    Innocent screensaver
                </td>
                <td>
                    {{ html.icon('file-code-o') }} .exe
                </td>
                <td>
                    3.5 MB
                </td>
                <td>
                    anna_kournikova.exe
                </td>
                <td class="centered">
                    {{ form.checkbox({'bare': 'true'}) }}
                </td>
            </tr>

            <tr>
                <td>
                    My awesome PDF
                </td>
                <td>
                    {{ html.icon('file-pdf-o') }} .pdf
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    sdfghjkhjifldshjkfdshajkl.pdf
                </td>
                <td class="centered">
                    {{ form.checkbox({'bare': 'true'}) }}
                </td>
            </tr>
        </tbody>
    </table>
    </div>
{% endblock tab_content %}
{% block tab_sidebar %}
    <h2>Sortable tables</h2>
    <ul>
        <li>Does not work with datatables</li>
        <li>Keyboard accessible controls shown when tabbing to a row</li>
    </ul>
    <code class="hljs">
        &lt;table class="table is-sortable table--full"&gt; &hellip; &lt;/table&gt;
    </code>
    <br /><br /><br />
    <h2>Tables with badges in "Actions" dropdown</h2>
    <ul>
        <li>Add class "has-badges" on the wrapper element that groups together both the dropdown and the table</li>
    </ul>
    <code class="hljs">
        &lt;div class="has-badges"&gt; &hellip; &lt;/div&gt;
    </code>
{% endblock tab_sidebar %}
