{% extends '@pulsar/pulsar/components/tab.html.twig' %}
{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}

{% block tab_content %}
    <table class="table is-sortable table--full">
        <caption class="hide">A sortable list of files</caption>
        <thead>
            <tr>
                <th>File title</th>
                <th>Type</th>
                <th>Size</th>
                <th>Filename / URL</th>
                <th class="shrink-to-fit"><span class="hide">Sort</span></th>
                <th class="shrink-to-fit"><span class="hide">Actions</span></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    My awesome document
                </td>
                <td>
                    {{ html.icon('file-word-o') }} .docx
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    document.docx
                </td>
                <td class="u-text-align-right sortable-control">
                    {{
                        html.button({
                            'label': html.icon('arrow-up'),
                            'class': 'btn btn--naked btn--sortable',
                            'aria-label': 'Move row "My awesome document" up',
                            'data-move': 'up',
                            'type': 'button'
                        })
                    }}
                    {{
                        html.button({
                            'label': html.icon('arrow-down'),
                            'class': 'btn btn--naked btn--sortable',
                            'aria-label': 'Move row "My awesome document" down',
                            'data-move': 'down',
                            'type': 'button'
                        })
                    }}
                </td>
                <td class="u-text-align-right">
                    {{ html.remove_button({ 'placement': 'right' }) }}
                </td>
            </tr>

            <tr>
                <td>
                    Innocent screensaver
                </td>
                <td>
                    {{ html.icon('file-code-o') }} .exe
                </td>
                <td>
                    3.5 MB
                </td>
                <td>
                    anna_kournikova.exe
                </td>
                <td class="u-text-align-right sortable-control">
                    {{
                        html.button({
                            'label': html.icon('arrow-up'),
                            'class': 'btn btn--naked btn--sortable',
                            'aria-label': 'Move row "Innocent screensaver" up',
                            'data-move': 'up',
                            'type': 'button'
                        })
                    }}
                    {{
                        html.button({
                            'label': html.icon('arrow-down'),
                            'class': 'btn btn--naked btn--sortable',
                            'aria-label': 'Move row "Innocent screensaver" down',
                            'data-move': 'down',
                            'type': 'button'
                        })
                    }}
                </td>
                <td class="u-text-align-right">
                    {{ html.remove_button({ 'placement': 'right' }) }}
                </td>
            </tr>

            <tr>
                <td>
                    My awesome PDF
                </td>
                <td>
                    {{ html.icon('file-pdf-o') }} .pdf
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    sdfghjkhjifldshjkfdshajkl.pdf
                </td>
                <td class="u-text-align-right sortable-control">
                    {{
                        html.button({
                            'label': html.icon('arrow-up'),
                            'class': 'btn btn--naked btn--sortable',
                            'aria-label': 'Move row "My awesome PDF" up',
                            'data-move': 'up',
                            'type': 'button'
                        })
                    }}
                    {{
                        html.button({
                            'label': html.icon('arrow-down'),
                            'class': 'btn btn--naked btn--sortable',
                            'aria-label': 'Move row "My awesome PDF" down',
                            'data-move': 'down',
                            'type': 'button'
                        })
                    }}
                </td>
                <td class="u-text-align-right">
                    {{ html.remove_button({ 'placement': 'right' }) }}
                </td>
            </tr>
        </tbody>
    </table><br/>
    <div class="has-badges">

        {{
            html.actions_menu({
                'items': [
                    [
                        {
                            'label': 'New Filter',
                            'href': '#',
                            'icon': 'filter',
                            'data-ui': 'show-filter-bar'
                        },
                        {
                            'label': 'Random Option',
                            'href': '#',
                            'icon': 'envelope'
                        },
                    ],
                    [
                        {
                            'label': 'Delete',
                            'href': '#',
                            'icon': 'remove',
                            'class': 'delete'
                        }
                    ]

                ]
            })
        }}
        <br />

    <br/>
    <table class="table is-sortable table--full">
        <caption class="hide">Another sortable list of files</caption>
        <thead>
            <tr>
                <th>File title</th>
                <th>Type</th>
                <th>Size</th>
                <th>Filename / URL</th>
                <th class="centered">Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    My awesome document
                </td>
                <td>
                    {{ html.icon('file-word-o') }} .docx
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    document.docx
                </td>
                <td class="centered">
                    {{ form.checkbox({'bare': 'true', 'aria-label': 'document.docx'}) }}
                </td>
            </tr>

            <tr>
                <td>
                    Innocent screensaver
                </td>
                <td>
                    {{ html.icon('file-code-o') }} .exe
                </td>
                <td>
                    3.5 MB
                </td>
                <td>
                    anna_kournikova.exe
                </td>
                <td class="centered">
                    {{ form.checkbox({'bare': 'true', 'aria-label': 'Delete anna_kournikova.exe'}) }}
                </td>
            </tr>

            <tr>
                <td>
                    My awesome PDF
                </td>
                <td>
                    {{ html.icon('file-pdf-o') }} .pdf
                </td>
                <td>
                    685 KB
                </td>
                <td>
                    sdfghjkhjifldshjkfdshajkl.pdf
                </td>
                <td class="centered">
                    {{ form.checkbox({'bare': 'true', 'aria-label': 'Delete sdfghjkhjifldshjkfdshajkl.pdf'}) }}
                </td>
            </tr>
        </tbody>
    </table>
    </div>
{% endblock tab_content %}
{% block tab_sidebar %}
    <h2>Sortable tables</h2>
    <ul>
        <li>Does not work with datatables</li>
        <li>Keyboard accessible controls shown when tabbing to a row</li>
    </ul>
    <code class="hljs">
        &lt;table class="table is-sortable table--full"&gt; &hellip; &lt;/table&gt;
    </code>
    <br /><br /><br />
    <h2>Tables with badges in "Actions" dropdown</h2>
    <ul>
        <li>Add class "has-badges" on the wrapper element that groups together both the dropdown and the table</li>
    </ul>
    <code class="hljs">
        &lt;div class="has-badges"&gt; &hellip; &lt;/div&gt;
    </code>
{% endblock tab_sidebar %}
