{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{%- block actions_left -%}
    {{
        html.actions_menu({
            'items': [
                [
                    {
                        'label': 'Save',
                        'href': '/save',
                        'icon': 'save'
                    },
                    {
                        'label': 'Edit',
                        'href': '/edit',
                        'icon': 'pencil'
                    }
                ],
                [
                    {
                        'label': 'Delete',
                        'href': '/delete',
                        'icon': 'remove'
                    }
                ]
            ]
        })
    }}
{%- endblock -%}

{%- block actions_right -%}
    {{
        html.button({
            'label': 'Primary Action',
            'class': 'btn--primary'
        })
    }}
{%- endblock -%}

{% block tab_content %}
    <h2 class="heading">Standard 'state' colours</h2>

    <div class="swatch swatch--primary-base">
        <div class="swatch__colour">
            <span class="swatch__text">primary</span>
        </div>
        <div class="swatch__label">
            <code>color(primary)</code>
            <span>{{ html.icon('ok') }} AA Compliant</span>
        </div>
    </div>

    <div class="swatch swatch--info-base">
        <div class="swatch__colour">
            <span class="swatch__text">info</span>
        </div>
        <div class="swatch__label">
            <code>color(info)</code>
            <span>{{ html.icon('ok') }} AA Compliant</span>
        </div>
    </div>

    <div class="swatch swatch--success-base">
        <div class="swatch__colour">
            <span class="swatch__text">success</span>
        </div>
        <div class="swatch__label">
            <code>color(success)</code>
            <span>{{ html.icon('ok') }} AA Compliant</span>
        </div>
    </div>

    <div class="swatch swatch--warning-base">
        <div class="swatch__colour">
            <span class="swatch__text">warning</span>
        </div>
        <div class="swatch__label">
            <code>color(warning)</code>
            <span>{{ html.icon('ok') }} AA Compliant</span>
        </div>
    </div>

    <div class="swatch swatch--danger-base">
        <div class="swatch__colour">
            <span class="swatch__text">danger</span>
        </div>
        <div class="swatch__label">
            <code>color(danger)</code>
            <span>{{ html.icon('ok') }} AA Compliant</span>
        </div>
    </div>

    <div class="swatch swatch--inverse-base">
        <div class="swatch__colour">
            <span class="swatch__text">inverse</span>
        </div>
        <div class="swatch__label">
            <code>color(inverse)</code>
            <span>{{ html.icon('ok') }} AA Compliant</span>
        </div>
    </div>

    <br /><br />
    <h2 class="heading">Monochrome</h2>

    {%
        set grays = {
            "black-base": "black",
            "gray-darker": "gray, darker",
            "gray-dark": "gray, dark",
            "gray-base": "gray",
            "gray-light": "gray, light",
            "gray-lighter": "gray, lighter",
            "gray-lightest": "gray, lightest",
            "gray-off-white": "gray, off-white",
            "white": "white"
        }
    %}

    {% for colour, address in grays %}
        <div class="swatch swatch--{{ colour }}">
            <div class="swatch__colour">
            </div>
            <div class="swatch__label">
                <code>color({{ address }})</code>
            </div>
        </div>
    {% endfor %}

    <br /><br />
