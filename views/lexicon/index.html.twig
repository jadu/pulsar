{% extends '@pulsar/pulsar/layouts/base.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}
{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Components' %}

{%
    set actions_menu = [
        html.link({
          'label': html.icon('save') ~ ' Save',
          'href': '#save'
        }),
        html.link({
          'label': html.icon('print') ~ ' Print',
          'href': '#print'
        }),
        html.divider(),
        html.link({
          'label': html.icon('trash') ~ ' Delete',
          'href': '#delete',
          'class': 'link--danger disabled',
          'attributes': 'data-on-datagrid-item-selected=enable'
        })
    ]
%}

{% set tab_buttons %}{% include   'lexicon/tabs/buttons_labels.html.twig' %}{% endset %}
{% set tab_checkgrid %}{% include 'lexicon/tabs/checkgrid.html.twig' %}{% endset %}
{% set tab_colours %}{% include   'lexicon/tabs/colours.html.twig' %}{% endset %}
{% set tab_decks %}{% include     'lexicon/tabs/decks.html.twig' %}{% endset %}
{% set tab_flash %}{% include     'lexicon/tabs/flash.html.twig' %}{% endset %}
{% set tab_forms %}{% include     'lexicon/tabs/forms.html.twig' %}{% endset %}
{% set tab_loading %}{% include   'lexicon/tabs/loading.html.twig' %}{% endset %}
{% set tab_message %}{% include   'lexicon/tabs/message.html.twig' %}{% endset %}
{% set tab_modals %}{% include    'lexicon/tabs/modals.html.twig' %}{% endset %}
{% set tab_panels %}{% include    'lexicon/tabs/panels.html.twig' %}{% endset %}
{% set tab_progress_bars %}{% include 'lexicon/tabs/progress_bars.html.twig' %}{% endset %}
{% set tab_tooltips %}{% include  'lexicon/tabs/tooltips.html.twig' %}{% endset %}
{% set tab_data_grid %}{% include 'lexicon/tabs/datagrid.html.twig' %}{% endset %}
{% set tab_metadata %}{% include  'lexicon/tabs/metadata.html.twig' %}{% endset %}

{%
    set nav_data = {
        "1": {
            "label": "Lexicon",
            "class": "is-active",
            "href": '#lexicon',
            "icon": "info-sign",
            "items": {
                "1.1": {
                    "1.1.1": {
                        "label": "Components",
                        "href": "/app/app.php/lexicon/main",
                        "class": "is-active"
                    },
                    "1.1.2": {
                        "label": "Modules",
                        "href": "/app/app.php/lexicon/modules.html.twig"
                    },
                    "1.1.3": {
                        "label": "Patterns",
                        "href": "/app/app.php/lexicon/patterns.html.twig"
                    }
                }
            }
        },
        "2": {
            "label": "Docs",
            "class": "",
            "href": "http://jadu.gitbooks.io/pulsar/",
            "icon": "book"
        }
    }
%}

{%
    set tabs_content = [
        {
          "id"    : "checkgrid",
          "label" : "Checkgrid",
          "src"   : tab_checkgrid,
          "active": true
        },
        {
          "id"    : "colours",
          "label" : "Colours",
          "src"   : tab_colours
        },
        {
          "id"    : "buttons",
          "label" : "Buttons",
          "src"   : tab_buttons
        },
        {
          "id"    : "flash",
          "label" : "Flash messages",
          "src"   : tab_flash
        },
        {
          "id"    : "forms",
          "label" : "Forms",
          "src"   : tab_forms
        },
        {
          "id"    : "loading",
          "label" : "Loading",
          "src"   : tab_loading
        },
        {
          "id"    : "messages",
          "label" : html.icon("envelope") ~ " Messages",
          "src"   : tab_message
        },
        {
          "id"    : "metadata",
          "label" : "Metadata",
          "src"   : tab_metadata
        },
        {
          "id"    : "panels",
          "label" : "Panels",
          "src"   : tab_panels
        },
        {
          "id"    : "progress",
          "label" : "Progress bars",
          "src"   : tab_progress_bars
        },
        {
          "id"    : "table",
          "label" : "Table",
          "src"   : tab_data_grid
        },
        {
          "id"    : "tooltips",
          "label" : "Tooltips",
          "src"   : tab_tooltips
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}

{% block javascript %}
{% endblock %}
