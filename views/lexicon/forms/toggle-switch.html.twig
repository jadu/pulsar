{% extends '@pulsar/pulsar/components/tab.html.twig' %}
{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}

{% block tab_content %}

    {{
        form.create()
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': 'Toggle switch',
            'name': 'toggle-example-1'
        })
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': 'Required',
            'required': true,
            'name': 'toggle-example-2'
        })
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': 'Toggle switch with help',
            'help': 'Help text to give more information about expected input',
            'name': 'toggle-example-3'
        })
    }}

    {{ form.fieldset_start({ 'legend': 'Alignment' }) }}

    {{
        form.toggle_switch({
            'label': 'Toggle switch',
            'show-label': false,
            'help': 'This example hides the label with the <code>show-label</code> option'
        })
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': 'Toggle switch with a longer than expected label which will probably wrap multple lines and push the following input onto the next baseline',
            'help': 'Example block-level help text here'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Errors &amp; Validation' }) }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': 'Toggle switch with error',
            'error': 'Please complete this field'
        })
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': 'Toggle switch with multiple errors',
            'error': ['Do this', 'Do this too']
        })
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': 'Toggle switch with error and help',
            'error': 'Please complete this field',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'class': 'has-error',
            'label': 'Toggle switch error with help only',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'States' }) }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-changed"',
            'class': 'has-changed',
            'help': 'Highlight whether an action elsewhere affects an input'
        })
    }}
    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-success"',
            'class': 'has-success',
            'help': 'Something good happened'
        })
    }}

    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-warning"',
            'help': 'Something bad happened',
            'class': 'has-warning'
        })
    }}
    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-error"',
            'help': 'Automatically added if using <code>error</code> option',
            'class': 'has-error'
        })
    }}
    {{
        form.toggle_switch({
            'id': 'guid-' ~ random(),
            'label': '"disabled": true',
            'help': 'Stop! Canâ€™t touch this',
            'disabled': true
        })
    }}

    {{ form.fieldset_end() }}

    {{
        form.end({
            'actions': [
                html.button({
                    'label': 'Save',
                    'class': 'btn--primary',
                    'type': 'submit'
                }),
                html.button({
                    'label': 'Cancel',
                    'class': 'btn--naked'
                })
            ]
        })
    }}

{% endblock tab_content %}

