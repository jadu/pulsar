{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}

    {{
        form.create()
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Foo'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Color field with value',
            'value': '#c00000'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Required',
            'required': true
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Placeholder',
            'placeholder': 'Oh, hello'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Color field with help',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Color field with guidance',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Required with guidance',
            'guidance': 'Help text to give more information about expected input',
            'required': true
        })
    }}

    {{ form.fieldset_start({ 'legend': 'Alignment' }) }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Foo',
            'show-label': false,
            'help': 'This example hides the label with the <code>show-label</code> option'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Text input with a longer than expected label which will probably wrap multple lines and push the following input onto the next baseline',
            'name': 'inputTextLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Text input with a longer than expected label but this time we use the form__group--top class to keep the label on a single line',
            'class': 'form__group--top',
            'name': 'inputTextLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'The same as above, but this time we also add the .form__group--flush class to keep everything on the left edge',
            'class': 'form__group--top form__group--flush',
            'name': 'inputTextLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Errors &amp; Validation' }) }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Color field with error',
            'error': 'Please complete this field'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Color field with multiple errors',
            'error': ['Do this', 'Do this too']
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Color field with error and help',
            'error': 'Please complete this field',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'class': 'has-error',
            'label': 'Color field error with help only',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'States' }) }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-changed"',
            'class': 'has-changed',
            'help': 'Highlight whether an action elsewhere affects an input'
        })
    }}
    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-success"',
            'class': 'has-success',
            'help': 'Something good happened'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-warning"',
            'class': 'has-warning',
            'help': 'Something bad happened'
        })
    }}
    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': '"class": "has-error"',
            'class': 'has-error',
            'help': 'Automatically added if using <code>error</code> option'
        })
    }}
    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': '"disabled": true',
            'disabled': true,
            'help': 'Stop! Can’t touch this'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Sizes' }) }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Mini',
            'class': 'form__group--mini',
            'name': 'inputTextMini'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Small',
            'class': 'form__group--small',
            'name': 'inputTextSmall'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Medium',
            'class': 'form__group--medium',
            'name': 'inputTextMedium'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Regular',
            'name': 'inputTextRegular'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Large',
            'class': 'form__group--large',
            'name': 'inputTextLarge'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Extra Large',
            'class': 'form__group--xlarge',
            'name': 'inputTextXLarge'
        })
    }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Full',
            'class': 'form__group--full',
            'name': 'inputTextFull'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Appended &amp; Prepended' }) }}

    {{
        form.color({
            'id': 'guid-' ~ random(),
            'label': 'Prepended',
            'prepend': '£'
        })
    }}

    {{ form.fieldset_end() }}

    {{
        form.end({
            'actions': [
                html.button({
                    'label': 'Save',
                    'class': 'btn--primary',
                    'type': 'submit'
                }),
                html.button({
                    'label': 'Cancel',
                    'class': 'btn--naked'
                })
            ]
        })
    }}

{% endblock tab_content %}

{% block tab_sidebar %}
    <a href="https://jadu.gitbooks.io/pulsar/content/text.html">
        <img src="../../../images/cover.png" alt="Pulsar documentation front cover" width="157" />
    </a>
    <br />
    {{
        html.button({
            'label': 'View Documentation',
            'type': 'link',
            'href': 'https://jadu.gitbooks.io/pulsar/content/text.html'
        })
    }}

{% endblock tab_sidebar %}
