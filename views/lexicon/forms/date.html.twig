{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}

    {{
        form.create()
    }}

    {{
        form.date({
            'id': 'date-1',
            'label': 'Date field'
        })
    }}

    {{
        form.date({
            'id': 'date-2',
            'label': 'Date field with value',
            'value': '04/07/1981'
        })
    }}

    {{
        form.date({
            'id': 'date-3',
            'label': 'Required',
            'required': true
        })
    }}

    {{
        form.date({
            'id': 'date-4',
            'label': 'Placeholder',
            'placeholder': 'Oh, hello'
        })
    }}

    {{
        form.date({
            'id': 'date-5',
            'label': 'Date field with help',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.date({
            'id': 'date-6',
            'label': 'Date field with guidance',
