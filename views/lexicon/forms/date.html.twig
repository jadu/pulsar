            'name': 'inputTextRegular'
        })
    }}

    {{
        form.date({
            'id': 'date-24',
            'label': 'Large',
            'class': 'form__group--large',
            'name': 'inputTextLarge'
        })
    }}

    {{
        form.date({
            'id': 'date-25',
            'label': 'Extra Large',
            'class': 'form__group--xlarge',
