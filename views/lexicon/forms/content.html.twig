{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}

    {{
        form.create()
    }}

    {{
        form.content({
            'label': 'Content with value',
            'value': 'My value'
        })
    }}

    {{
        form.content({
            'label': 'Content with help',
            'value': 'My value',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.content({
            'label': 'Content with guidance',
            'value': 'My value',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.content({
            'label': 'Content with value',
            'value': 'My value',
            'show-label': false,
            'help': 'This example hides the label with the <code>show-label</code> option'
        })
    }}

    {{ form.fieldset_start({ 'legend': 'Errors &amp; Validation' }) }}

    {{
        form.content({
            'label': 'Content with error',
            'value': 'My value',
            'error': 'Please complete this field'
        })
    }}

    {{
        form.content({
            'label': 'Content with multiple errors',
            'value': 'My value',
            'error': ['Do this', 'Do this too']
        })
    }}

    {{
        form.content({
            'label': 'Content with error and help',
            'value': 'My value',
            'error': 'Please complete this field',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.content({
            'class': 'has-error',
            'help': 'Help text to give more information about expected input',
            'label': 'Content error with help only',
            'value': 'My value'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'States' }) }}

    {{
        form.content({
            'class': 'has-changed',
            'help': 'Highlight whether an action elsewhere affects an input',
            'label': '"class": "has-changed"',
            'value': 'My value'
        })
    }}
    {{
        form.content({
            'class': 'has-success',
            'help': 'Something good happened',
            'label': '"class": "has-success"',
            'value': 'My value'
        })
    }}

    {{
        form.content({
            'class': 'has-warning',
            'help': 'Something bad happened',
            'label': '"class": "has-warning"',
            'value': 'My value'
        })
    }}
    {{
        form.content({
            'class': 'has-error',
            'help': 'Automatically added if using <code>error</code> option',
            'label': '"class": "has-error"',
            'value': 'My value'
        })
    }}
    {{
        form.content({
            'disabled': true,
            'help': 'Stop! Canâ€™t touch this',
            'label': '"disabled": true',
            'value': 'My value'
        })
    }}

    {{ form.fieldset_end() }}

    {{
        form.end()
    }}

{% endblock tab_content %}

{% block tab_sidebar %}
    <a href="https://jadu.gitbooks.io/pulsar/content/text.html">
        <img src="../../../images/cover.png" alt="Pulsar documentation front cover" width="157px" />
    </a>
    <br />
    {{
        html.button({
            'label': 'View Documentation',
            'type': 'link',
            'href': 'https://jadu.gitbooks.io/pulsar/content/choice.html'
        })
    }}

{% endblock tab_sidebar %}
