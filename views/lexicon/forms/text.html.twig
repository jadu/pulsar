{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}

    {{
        form.create()
    }}

    {{
        form.text({
            'id': 'text-1',
            'label': 'Text field'
        })
    }}

    {{
        form.text({
            'id': 'text-2',
            'label': 'Text field with value',
            'value': 'My value'
        })
    }}

    {{
        form.text({
            'id': 'text-3',
            'label': 'Required',
            'required': true
        })
    }}

    {{
        form.text({
            'id': 'text-4',
            'label': 'Placeholder',
            'placeholder': 'Oh, hello'
        })
    }}

    {{
        form.text({
            'id': 'text-5',
            'label': 'Text field with help',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.text({
            'id': 'text-6',
            'label': 'Text field with guidance',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.text({
            'id': 'text-7',
            'label': 'Required with guidance',
            'guidance': 'Help text to give more information about expected input',
            'required': true
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Alignment' }) }}

    {{
        form.text({
            'id': 'text-8',
            'label': 'Text input with a longer than expected label which will probably wrap multple lines and push the following input onto the next baseline',
            'name': 'inputTextLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.text({
            'id': 'text-9',
            'label': 'Text input with a longer than expected label but this time we use the form__group--top class to keep the label on a single line',
            'class': 'form__group--top',
            'name': 'inputTextLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.text({
            'id': 'text-10',
            'label': 'The same as above, but this time we also add the .form__group--flush class to keep everything on the left edge',
            'class': 'form__group--top form__group--flush',
            'name': 'inputTextLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Errors &amp; Validation' }) }}

    {{
        form.text({
            'id': 'text-11',
            'label': 'Text field with error',
            'error': 'Please complete this field'
        })
    }}

    {{
        form.text({
            'id': 'text-12',
            'label': 'Text field with multiple errors',
            'error': ['Do this', 'Do this too']
        })
    }}

    {{
        form.text({
            'id': 'text-13',
            'label': 'Text field with error and help',
            'error': 'Please complete this field',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.text({
            'id': 'text-14',
            'class': 'has-error',
            'label': 'Text field error with help only',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'States' }) }}

    {{
        form.text({
            'id': 'text-15',
            'label': '"class": "has-changed"',
            'class': 'has-changed',
            'help': 'Highlight whether an action elsewhere affects an input'
        })
    }}
    {{
        form.text({
            'id': 'text-16',
            'label': '"class": "has-success"',
            'class': 'has-success',
            'help': 'Something good happened'
        })
    }}

    {{
        form.text({
            'id': 'text-17',
            'label': '"class": "has-warning"',
            'class': 'has-warning',
            'help': 'Something bad happened'
        })
    }}
    {{
        form.text({
            'id': 'text-18',
            'label': '"class": "has-error"',
            'class': 'has-error',
            'help': 'Automatically added if using <code>error</code> option'
        })
    }}
    {{
        form.text({
            'id': 'text-19',
            'label': '"disabled": true',
            'disabled': true,
            'help': 'Stop! Can’t touch this'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Sizes' }) }}

    {{
        form.text({
            'id': 'text-20',
            'label': 'Mini',
            'class': 'form__group--mini',
            'name': 'inputTextMini'
        })
    }}

    {{
        form.text({
            'id': 'text-21',
            'label': 'Small',
            'class': 'form__group--small',
            'name': 'inputTextSmall'
        })
    }}

    {{
        form.text({
            'id': 'text-22',
            'label': 'Medium',
            'class': 'form__group--medium',
            'name': 'inputTextMedium'
        })
    }}

    {{
        form.text({
            'id': 'text-23',
            'label': 'Regular',
            'name': 'inputTextRegular'
        })
    }}

    {{
        form.text({
            'id': 'text-24',
            'label': 'Large',
            'class': 'form__group--large',
            'name': 'inputTextLarge'
        })
    }}

    {{
        form.text({
            'id': 'text-25',
            'label': 'Extra Large',
            'class': 'form__group--xlarge',
            'name': 'inputTextXLarge'
        })
    }}

    {{
        form.text({
            'id': 'text-26',
            'label': 'Full',
            'class': 'form__group--full',
            'name': 'inputTextFull'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Appended &amp; Prepended' }) }}

    {{
        form.text({
            'id': 'text-27',
            'label': 'Prepended',
            'prepend': '£'
        })
    }}

    {{
        form.text({
            'id': 'text-28',
            'label': 'Appended',
            'append': '.00'
        })
    }}

    {{
        form.text({
            'id': 'text-29',
            'label': 'Appended with guidance',
            'append': '.00',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.text({
            'id': 'text-30',
            'label': 'Prepended &amp; Appended',
            'append': '.00',
            'prepend': '£'
        })
    }}

    {{
        form.text({
            'id': 'text-31',
            'label': 'Prepended button',
            'prepend_type': 'button',
            'prepend': html.button({'label': 'Button'})
        })
    }}

    {{
        form.text({
            'id': 'text-32',
            'label': 'Appended button',
            'append_type': 'button',
            'append': html.button({'label': 'Button'})
        })
    }}

    {{ form.fieldset_end() }}

    {{
        form.end()
    }}

{% endblock tab_content %}

