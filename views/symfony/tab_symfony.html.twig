{% extends "@pulsar/pulsar/components/tab.html.twig" %}
{% form_theme symfonyForm '/pulsar/v2/forms.html.twig' %}

{% block tab_content %}

    {{ form_start(symfonyForm) }}

        {{ form_row(symfonyForm.Hidden) }}

        <fieldset>
            <legend class="legend">Text fields</legend>
            {{ form_row(symfonyForm.Text) }}
            {{ form_row(symfonyForm.Password) }}
            {{ form_row(symfonyForm.Textarea) }}
            {{ form_row(symfonyForm.Email) }}
            {{ form_row(symfonyForm.Tel) }}
            {{ form_row(symfonyForm.Integer) }}
            {{ form_row(symfonyForm.Money) }}
            {{ form_row(symfonyForm.Number) }}
            {{ form_row(symfonyForm.Percent) }}
            {{ form_row(symfonyForm.Search) }}
            {{ form_row(symfonyForm.Url) }}
            {{ form_row(symfonyForm.Range) }}
        </fieldset>

        <fieldset>
            <legend class="legend">Repeated fields</legend>
            {{ form_row(symfonyForm.Repeated) }}
        </fieldset>

        <fieldset>
            <legend class="legend">Choice fields</legend>
            {{ form_row(symfonyForm.ChoiceDefault) }}
            {{ form_row(symfonyForm.ChoiceExpanded) }}
            {{ form_row(symfonyForm.ChoiceMultiple) }}
            {{ form_row(symfonyForm.ChoiceExpandedMultiple) }}
            {{ form_row(symfonyForm.Country) }}
            {{ form_row(symfonyForm.Language) }}
            {{ form_row(symfonyForm.Locale) }}
            {{ form_row(symfonyForm.Timezone) }}
            {{ form_row(symfonyForm.Currency) }}
        </fieldset>

        <fieldset>
            <legend class="legend">Date and Time fields</legend>
            {{ form_row(symfonyForm.DateChoice) }}
            {{ form_row(symfonyForm.DateText) }}
            {{ form_row(symfonyForm.DateSingleText) }}
            {{ form_row(symfonyForm.DateTimeChoice) }}
            {{ form_row(symfonyForm.DateTimeText) }}
            {{ form_row(symfonyForm.DateTimeSingleText) }}
            {{ form_row(symfonyForm.TimeChoice) }}
            {{ form_row(symfonyForm.TimeText) }}
            {{ form_row(symfonyForm.TimeSingleText) }}
            {{ form_row(symfonyForm.BirthdayChoice) }}
            {{ form_row(symfonyForm.BirthdayText) }}
            {{ form_row(symfonyForm.BirthdaySingleText) }}
            {{ form_row(symfonyForm.DateIntervalChoice) }}
            {{ form_row(symfonyForm.DateIntervalText) }}
            {{ form_row(symfonyForm.DateIntervalInteger) }}
            {{ form_row(symfonyForm.DateIntervalSingleText) }}
        </fieldset>

        <fieldset>
            <legend class="legend">Other fields</legend>
            {{ form_row(symfonyForm.Checkbox) }}
            {{ form_row(symfonyForm.File) }}
            {{ form_row(symfonyForm.Radio) }}
        </fieldset>

        <fieldset>
            <legend class="legend">Buttons</legend>
            {{ form_row(symfonyForm.Button) }}
            {{ form_row(symfonyForm.Reset) }}
            {{ form_row(symfonyForm.Submit) }}
        </fieldset>

    {{ form_end(symfonyForm, {'render_rest': false}) }}
{% endblock %}
