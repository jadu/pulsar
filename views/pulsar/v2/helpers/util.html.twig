{% macro addon(value) %}
{% spaceless %}
    {% if value is not empty %}
    {{- value -}}
    {% endif %}
{% endspaceless %}
{% endmacro %}


{% macro caret(visible) %}
{% spaceless %}
    {% if visible is defined and visible != 0 and visible != null %}
        &nbsp;<span class="caret"></span>
    {% endif  %}
{% endspaceless %}
{% endmacro %}


{% macro class(default, options) %}
{% spaceless %}
    {% set classes = [] %}

    {%
        if options.bare is not defined
        or options.bare == false
    %}
        {% set classes = classes|merge([default]) %}
    {% endif %}

    {% set classes = classes|merge([options.class|default]) %}

    class="{{ classes|join(' ')|trim }}"

{% endspaceless %}
{% endmacro %}


{% macro checked(value) %}
{% spaceless %}
    {% if value is not empty %}
        checked="{{ value }}"
    {% endif %}
{% endspaceless %}
{% endmacro %}


{% macro data(attributes) %}
{% spaceless %}
    {% for key, value in attributes if value is not empty %}
        {% if key == 'checked' %}
            checked
        {% else %}
            data-{{ key }}="{{ value }}"
        {% endif %}
    {% endfor %}
{% endspaceless %}
{% endmacro %}


