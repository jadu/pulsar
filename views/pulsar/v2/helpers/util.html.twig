{% macro href(value) %}
{% spaceless %}
    {% if value is null %}
        {% set href = '#missing-href-attribute' %}
    {% else %}
        {% set href = value %}
    {% endif %}

    href="{{ href }}"
{% endspaceless %}
{% endmacro %}


