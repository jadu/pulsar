{% macro datatable(options) %}
    {% import _self as html %}

    {% if options.overflow is defined and options.overflow == 'collapse' %}
        {% set overflow = options.overflow %}
        {% set options = options|merge({ 'data-overflow': overflow }) %}
    {% else %}
        {% set overflow = 'scroll' %}
        {% set options = options|merge({ 'class': 'table--horizontal', 'data-overflow': overflow }) %}
    {% endif %}

    {% if options.data is defined and options.data is not empty %}
    <table{{ attributes(options
                |exclude('overflow')
                |defaults({ 'class': 'table datatable table--full' })) }} style="width: 100%">
        <thead>
            <tr>
                {% if overflow == 'collapse' %}
                    <td></td>
                {% endif %}
                {% for column in options.data.columns %}
                    {% if loop.first %}
                        <th class="table-selection" data-orderable="false">
                            <input type="checkbox" class="form__control checkbox js-select-all" aria-label="Select all rows" data-tippy-content="select all rows" data-tippy-placement="right" />
                        </th>
                    {% endif %}
                    <th{{ attributes(column.attrs|default) }}>{{ column.title }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in options.data.data %}
                <tr>
                    {% if overflow == 'collapse' %}
                        <td class="table-responsive">
                            {{ html.icon('plus-sign', { 'class': 'table-child-toggle' }) }}
                        </td>
                    {% endif %}
                    <td class="table-selection">
                        <input type="checkbox" class="form__control checkbox js-select" aria-label="Select row" />
                    </td>
                    {% for key, val in row %}
                        {% if val is same as(true) %}
                            <td data-order="{{ key }}" class="u-text-align-center">{{ html.status('online', { 'title': key, 'icon': true }) }}</td>
                        {% elseif val is same as(false) %}
                            <td data-order="{{ key }}" class="u-text-align-center">{{ html.status('offline', { 'title': 'Not ' ~ key|lower, 'icon': true }) }}</td>
                        {% else %}
                            <td>{{ val }}</td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endmacro %}
